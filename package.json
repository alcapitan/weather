{
    "name": "@alcapitan/at-weather",
    "version": "3.0.0-alpha1",
    "description": "Website of AT Weather.",
    "private": true,
    "main": "index.html",
    "scripts": {
        "babel:vk": "babel src/*.js --out-dir dist/ -s",
        "cspell:vk": "cspell lint src/*.{css,js} README.md --cache --show-context",
        "esbuild:vk": "esbuild --minify --sourcemap --keep-names --tree-shaking=false dist=dist/main.css dist=dist/main.js --outdir=dist/",
        "eslint:vk": "eslint src/*.js --cache --fix",
        "eslint:check:vk": "eslint src/*.js --cache",
        "postcss:vk": "postcss src/*.css -d dist/ -m",
        "prettier:vk": "prettier -w src/**.{css,js} *.md **.html --cache",
        "prettier:check:vk": "prettier -c src/**.{css,js} *.md **.html --cache",
        "stylelint:vk": "stylelint src/*.css --cache --fix",
        "stylelint:check:vk": "stylelint src/*.css --cache",
        "htmlhint": "htmlhint **/*.html",
        "commitlint": "commitlint",
        "commit": "commit",
        "check": "npm-run-all cspell:* prettier:check:* stylelint:check:* eslint:check:*",
        "build": "npm-run-all cspell:* prettier:* stylelint:* eslint:* postcss:* babel:* esbuild:*"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/alcapitan/weather.git"
    },
    "author": "Al Capitan",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/alcapitan/weather/issues"
    },
    "homepage": "https://github.com/alcapitan/weather#readme",
    "devDependencies": {
        "@babel/cli": "^7.22.5",
        "@babel/core": "^7.22.5",
        "@babel/eslint-parser": "^7.22.5",
        "@babel/preset-env": "^7.22.5",
        "@commitlint/cli": "^17.6.5",
        "@commitlint/config-conventional": "^17.6.5",
        "@commitlint/prompt-cli": "^17.6.5",
        "@cspell/dict-fr-fr": "^2.2.1",
        "autoprefixer": "^10.4.14",
        "cspell": "^6.31.1",
        "esbuild": "^0.17.19",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^8.8.0",
        "htmlhint": "^1.1.4",
        "husky": "^8.0.3",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.24",
        "postcss-cli": "^10.1.0",
        "postcss-preset-env": "^8.4.2",
        "prettier": "^2.8.8",
        "stylelint": "^15.7.0",
        "stylelint-config-standard": "^33.0.0"
    },
    "browserslist": [
        "defaults"
    ],
    "engines": {
        "node": ">=12.16"
    }
}
